                xslt = params['withXslt']
            }
            if (xslt != 'none') {
                println  "<?xml-stylesheet type='text/xsl' href='xslt/" + xslt + "'?>"
            }
            println cs.getPrevReply(params['urn'])
            break


            case 'GetPrevNextUrn':
                String xslt = "citenavurns.xsl"
            if (params['withXslt']) {
                xslt = params['withXslt']
            }
            if (xslt != 'none') {
                println  "<?xml-stylesheet type='text/xsl' href='xslt/" + xslt + "'?>"
            }
            println cs.getPrevNextReply(params['urn'])
            break

            case 'GetValidReff':
                String xslt = "citegvr.xsl"
            if (params['withXslt']) {
