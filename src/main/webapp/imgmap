            break

            case 'GetCollectionSize':
                String xslt = "citecaps.xsl"
            if (params['withXslt']) {
                xslt = params['withXslt']
            }
            if (xslt != 'none') {
                println  "<?xml-stylesheet type='text/xsl' href='xslt/" + xslt + "'?>"
